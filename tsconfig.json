{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noLib": false,
        "jsx": "preserve",
        "target": "esnext",
        "sourceMap": true,
        "lib": ["DOM","ESNext"],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "scripts", "dist/**"]
}
